@{
/*
    Name: Order Summery
    Purpose: Contains Order item Lines, Promotion panel and Order Amount Information
    Structure: /Views/Checkout/_OrderSummary.cshtml
    Contains (Partial Views Used):

    Contained In (Where we Use this View):
        a-/Views/Basket/OnePageCheckout.cshtml
    */
}
@using Omnicx.WebStore.Models.Enums
@inherits Omnicx.WebStore.Core.Services.Infrastructure.CustomBaseViewPage<dynamic>
<div class="row">
    <div class="col-sm-12 col-xs-12 wzc--heading--pannel">
        <h4 class="wzc--h5">Delivery Address <a class="btn btn-default btn-sm pull-right" style="margin-top:-8px;">Change</a></h4>
    </div>
    <div class="col-sm-12 col-xs-12 wzc--address--border">
        <div class="col-xs-1 col-sm-1 no-padding">
            <label class="control control--checkbox">                                
                <input id="address" name="address" type="checkbox" class="ng-pristine ng-valid" checked="checked">
                <div class="control__indicator"></div>
            </label>
        </div>
        <div class="col-xs-11 col-sm-11 no-padding">
            <address class="wzc--address">
                <strong>amit kumar</strong><br />295B Chiswick High Road, London,<br />W4 4HH, United Kingdom<br />(excluding Channel Islands)
            </address>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12 col-xs-12 wzc--heading--pannel">
        <h4 class="wzc--h5">Delivery Method<a class="btn btn-default btn-sm pull-right" style="margin-top:-8px;">Change</a></h4>
    </div>
    <div class="col-sm-12 col-xs-12 wzc--address--border">
        <div class="col-xs-1 col-sm-1 no-padding">
            <label class="control control--checkbox">
                <input id="address" name="address" type="checkbox" class="ng-pristine ng-valid" checked="checked">
                <div class="control__indicator"></div>
            </label>
        </div>
        <div class="col-xs-8 col-sm-8 no-padding">
            <address class="wzc--address">
                <strong>Standard Delivery</strong><br />Delivered within 3-5 working days
            </address>
        </div>
        <div class="col-xs-3 col-sm-3 no-padding">
            <p class="wzc--p pull-right">$3.99</p>
        </div>
    </div>
</div>
<div class="row">
    <div class="col-sm-12 col-xs-12 wzc--heading--pannel">
        <h4 class="wzc--h5">Select Billing Address</h4>
    </div>
    <div class="col-sm-12 col-xs-12 wzc--address--border">
        <div class="col-xs-1 col-sm-1 no-padding">
            <label class="control control--checkbox">
                <input id="address" name="address" type="checkbox" class="ng-pristine ng-valid" checked="checked">
                <div class="control__indicator"></div>
            </label>
        </div>
        <div class="col-xs-11 col-sm-11 no-padding">
            <address class="wzc--address">
                <strong>amit kumar</strong><br />295B Chiswick High Road, London,<br />W4 4HH, United Kingdom<br />(excluding Channel Islands)
            </address>
        </div>
        <div class="col-sm-12 col-xs-12 margin-top-sm no-padding">
            <a class="animate btn-bordered btn-xs" data-toggle="modal" data-target="#userAddress-modal" ng-click="ck.addressText='delivery';" href=""><i class="fa fa-plus"></i> Create new address</a>
        </div>
    </div>   
</div>
<div class="row">
    <div class="col-sm-12 col-xs-12 wzc--heading--pannel">
        <h4 class="wzc--h5">Payment Detail</h4>
    </div>
    <div class="col-sm-12 col-xs-12 no-padding wzc--address--border" id="order-summary" >
        <table class="table no-margin no-padding">
            <tbody>
                <tr>
                    <td>@LT("Checkout.Label.Subtotal", "Subtotal")</td>
                    <th ng-bind="ck.basket.subTotal.formatted.withTax" class="text-right"></th>
                </tr>
                <tr>
                    <td>@LT("Checkout.Label.ShippingCharge", "Shipping and handling")</td>
                    <th ng-bind="ck.basket.shippingCharge.formatted.withTax" class="text-right"></th>
                </tr>
                <tr>
                    <td>@LT("Checkout.Label.Discount", "Discount")</td>
                    <th ng-bind="ck.basket.discount.formatted.withTax" class="text-right"></th>
                </tr>
                <tr ng-show="ck.basket.promotionsApplied.length>0" id="promoApplied4">
                    <td>Promotions Applied:</td>
                    <th class="text-right">
                        <ul class="promo-ul">
                            <li class="no-padding" ng-repeat="promotion in ck.basket.promotionsApplied">
                                <a href="" class="" title="Remove" ng-click="ck.removePromoCode(ck.basket.id,promotion.promoCode)"><span ng-bind="promotion.name"></span> <i class="fa fa-remove"></i></a>
                            </li>
                        </ul>
                    </th>
                </tr>
                <tr class="total">
                    <td>@LT("Checkout.Label.OrderTotal", "Amount Payable")</td>
                    <th ng-bind="ck.basket.grandTotal.formatted.withTax" class="text-right"></th>
                </tr>
                <tr>
                    <td colspan="2" class="sml-text" ng-cloak ng-bind="'@LT("YourBag.Text.IncludingVATof", "including VAT of")'+ck.basket.grandTotal.formatted.tax"></td>
                </tr>
                <tr class="total" ng-show="ck.showRemainingAmount">
                    <td>@LT("Checkout.Label.RemainingAmount", "Remaining Amount")</td>
                    <th ng-bind="ck.model.checkout.balanceAmount.formatted.withTax" class="text-right"> </th>
                    @*ng-hide="ck.basket.grandTotal.formatted.withTax==ck.model.checkout.balanceAmount.formatted.withTax"*@
                </tr>
            </tbody>
        </table>
    </div>
</div>