@{
/*
    Name: Login Modal
    Purpose: login Modal
    Structure: /Views/Shared/_Login.cshtml
    Contains (Partial Views Used):
        a-/Views/Shared/_Alerts.cshtml

    Contained In (Where we Use this View):
    */
}
@using Omnicx.WebStore.Models.Commerce
@using Omnicx.WebStore.Framework.Helpers
@inherits Omnicx.WebStore.Core.Services.Infrastructure.CustomBaseViewPage<LoginViewModel>
@{
    var loginForm = Html.Angular().ModelFor("gm.model");
}

<div class="modal fade modal-absolute" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="Login" aria-hidden="false">
    <div class="modal-dialog modal-sm">
        <div class="modal-content">
            <div class="modal-header">
                <div class="modal-title" id="Login">@LT("Header.Text.UserLogin", "User Login")</div>
                <button type="button" ng-click="gm.formReset(loginForm);gm.model.username=null;gm.model.password =null" class="close" data-dismiss="modal" aria-hidden="true">&times;</button>
            </div>
            <div class="modal-body">
                <form role="form" method="post" ng-submit="gm.globalLogin(gm.model)" novalidate>
                    <div ng-show="gm.errorMessage != null && global_login">
                        @Html.Partial("~/Views/Shared/_Alerts.cshtml")
                    </div>
                    <div class="form-group">
                        @loginForm.FormGroupFor(x => x.Username)
                    </div>
                    <div class="form-group">
                        @loginForm.FormGroupFor(x => x.Password)
                    </div>
                    <p class="text-center">
                        <button type="submit" class="btn btn-success"><i class="fa fa-sign-in"></i>@LT("Global.Buttons.Login", "Login")</button>
                    </p>
                    <div class="col-sm-12 col-xs-12 no-padding text-center">
                        <a href="@Url.Action("forgotpassword", "account")" class="text-center">Forgot Password</a>
                    </div>
                </form>
                <p class="text-center text-muted">@LT("Footer.Text.NoAccount", "Not registered yet?")</p>
                <p class="text-center text-muted"><a href="#" data-toggle="modal" data-target="#register-modal" data-dismiss="modal" aria-hidden="true" ng-click="gm.formReset(loginForm);gm.model.username=null;gm.model.password =null" class="text-black"><strong>@LT("Footer.Text.RegisterNow", "Register now")</strong></a>!@LT("MyAccount.Text.EasyRegister", " It is easy and done in 1 minute and gives you access to special discounts and much more")!</p>
            </div>
            <div class="modal-footer"></div>
        </div>
    </div>
</div>