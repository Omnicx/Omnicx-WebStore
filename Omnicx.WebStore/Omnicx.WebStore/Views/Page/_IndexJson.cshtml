        else if (component.BrandListDisplayType == "slider")
        {
            <div class="row hover01">
                <div class="col-sm-12 col-xs-12 no-padding whiteContainer">
                    <div id="Brandcarousel{{@ProductSno}}" class="carousel slide" data-ride="carousel" data-type="multi" data-interval="10000">
                        <div class="carousel-inner multi-inner-330">
                            @foreach (var brands in component.Brands.ToList().Select((obj, index) => new { index, obj }))
                            {
                                <div class="item" ng-class="{active : @brands.index==0}">
                                    <div class="carousel-col-@component.DataNumItemsRow">
                                        <a href="@brands.obj.Link">
                                            <figure>
                                                <img ng-src="https://devocxblob.blob.core.windows.net/demostore/@brands.obj.Logo" class="omni-img" sizes="(min-width: 768px) 540px, 100vw" alt="Banner3" component-type="@component.ComponentType" onerror="this.src = DEFAULT_IMAGE_URL">
                                            </figure>
                                            <div class="infornation">
                                                <strong>@brands.obj.ManufacturerName</strong>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                        <a class="left carousel-control" href="#Brandcarousel{{@ProductSno}}" data-slide="prev"><i class="fa fa-chevron-left"></i></a>
                        <a class="right carousel-control" href="#Brandcarousel{{@ProductSno}}" data-slide="next"><i class="fa fa-chevron-right"></i></a>
                    </div>
                </div>
            </div>
        }
        else if (component.BrandListDisplayType == "list")
        {
            <div class="row">
                <div class="col-sm-12 col-xs-12 whiteContainer">
                    <div class="row hover01">
                        @foreach (var brands in component.Brands)
                        {
                            if (component.DataNumItemsRow == null)
                            {
                                component.DataNumItemsRow = DefaultItemsRow.ToString();
                            }
                            <div ng-class="{'col-sm-12 col-xs-12': @component.DataNumItemsRow == 1,'col-sm-6 col-xs-6': @component.DataNumItemsRow == 2,'col-sm-4 col-xs-6': @component.DataNumItemsRow == 3,'col-sm-3 col-xs-6': @component.DataNumItemsRow == 4,'col-sm-5ths col-md-5ths col-xs-5ths col-lg-5ths': @component.DataNumItemsRow == 5, 'col-sm-2 col-xs-6': @component.DataNumItemsRow == 6}">
                                <a href="@brands.Link">
                                    <figure>
                                        <img ng-src="https://devocxblob.blob.core.windows.net/demostore/@brands.Logo" class="omni-img" alt="Banner3" sizes="(min-width: 768px) 540px, 100vw" component-type="@component.ComponentType" onerror="this.src = DEFAULT_IMAGE_URL">
                                    </figure>
                                    <div class="infornation">
                                        <strong>@brands.ManufacturerName</strong>
                                    </div>
                                </a>
                            </div>

                        }
                    </div>
                </div>
            </div>
        }

        continue;
    }
    @*================================================================================================================================================================================================================*@
                @*CATEGORY WIDGET*@
    if (component.ComponentType == SiteViewComponentTypes.CategoryList && component != null && component.Categories != null)
    {
        if (component.CategoryListDisplayType == "grid")
        {
            <div class="row">
                <div class="col-sm-12 col-xs-12 whiteContainer">
                    <div class="row hover01">
                        @foreach (var category in component.Categories)
                        {
                            if (component.DataNumItemsRow == null)
                            {
                                component.DataNumItemsRow = DefaultItemsRow.ToString();
                            }
                            <div ng-class="{'col-sm-12 col-xs-12': @component.DataNumItemsRow == 1,'col-sm-6 col-xs-6': @component.DataNumItemsRow == 2,'col-sm-4 col-xs-6': @component.DataNumItemsRow == 3,'col-sm-3 col-xs-6': @component.DataNumItemsRow == 4,'col-sm-5ths col-md-5ths col-xs-5ths col-lg-5ths': @component.DataNumItemsRow == 5, 'col-sm-2 col-xs-6': @component.DataNumItemsRow == 6}">
                                <figure>
                                    <img ng-src="@category.Image" alt="OCX Store Category" class="omni-img" component-type="@component.ComponentType" sizes="(min-width: 768px) 540px, 100vw" onerror="this.src = DEFAULT_IMAGE_URL" />
                                </figure>
                                <div class="infornation">
                                    <strong aria-hidden="true">@category.Name</strong>
                                    <p aria-hidden="true">@category.Description</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }
        else if (component.CategoryListDisplayType == "slider")
        {
            <div class="row hover01">
                <div class="col-sm-12 col-xs-12 no-padding whiteContainer">
                    <div id="Categorycarousel{{@ProductSno}}" class="carousel slide" data-ride="carousel" data-type="multi" data-interval="10000">
                        <div class="carousel-inner multi-inner-330">
                            @foreach (var category in component.Categories.ToList().Select((obj, index) => new { index, obj }))
                            {
                                <div class="item" ng-class="{active : @category.index==0}">
                                    <div class="carousel-col-@component.DataNumItemsRow">
                                        <a href="@category.obj.Link">
                                            <figure>
                                                <img ng-src="@category.obj.Image" alt="OCX Store Category" class="omni-img" component-type="@component.ComponentType" onerror="this.src = DEFAULT_IMAGE_URL" sizes="(min-width: 768px) 540px, 100vw" />
                                            </figure>
                                            <div class="infornation">
                                                <strong aria-hidden="true">@category.obj.Name</strong>
                                                <p aria-hidden="true">@category.obj.Description</p>
                                            </div>
                                        </a>
                                    </div>
                                </div>
                            }
                        </div>
                        <a class="left carousel-control" href="#Categorycarousel{{@ProductSno}}" data-slide="prev"><i class="fa fa-chevron-left"></i></a>
                        <a class="right carousel-control" href="#Categorycarousel{{@ProductSno}}" data-slide="next"><i class="fa fa-chevron-right"></i></a>
                    </div>
                </div>
            </div>
        }
        else if (component.CategoryListDisplayType == "list")
        {
            <div class="row">
                <div class="col-sm-12 col-xs-12 whiteContainer">
                    <div class="row hover01">
                        @foreach (var category in component.Categories)
                        {
                            if (component.DataNumItemsRow == null)
                            {
                                component.DataNumItemsRow = DefaultItemsRow.ToString();
                            }
                            <div ng-class="{'col-sm-12 col-xs-12': @component.DataNumItemsRow == 1,'col-sm-6 col-xs-6': @component.DataNumItemsRow == 2,'col-sm-4 col-xs-6': @component.DataNumItemsRow == 3,'col-sm-3 col-xs-6': @component.DataNumItemsRow == 4,'col-sm-5ths col-md-5ths col-xs-5ths col-lg-5ths': @component.DataNumItemsRow == 5, 'col-sm-2 col-xs-6': @component.DataNumItemsRow == 6}">
                                <figure>
                                    <img ng-src="@category.Image" alt="OCX Store Category" class="omni-img" component-type="@component.ComponentType" onerror="this.src = DEFAULT_IMAGE_URL" sizes="(min-width: 768px) 540px, 100vw" />
                                </figure>
                                <div class="infornation">
                                    <strong aria-hidden="true">@category.Name</strong>
                                    <p aria-hidden="true">@category.Description</p>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            </div>
        }

        continue;
    }
    if (component != null && component.ComponentType == SiteViewComponentTypes.BlogList && component.Blogs != null)
    {
        <div class="row">
            <div class="col-sm-12 col-xs-12 whiteContainer">
                <div class="row hover03">
                    @foreach (var blog in component.Blogs.ToList().Select((obj, index) => new { index, obj }))
                    {
                        <div class="col-sm-3 col-xs-12 no-padding">
                            <div class="col-sm-12 col-xs-12">
                                <figure>
                                    <img ng-src="@blog.obj.BlogImage" alt="OCX Blog" class="omni-img" onerror="this.src = DEFAULT_IMAGE_URL" sizes="(min-width: 768px) 540px, 100vw" />
                                </figure>
                                <div class="infornation-blog">
                                    <p aria-hidden="true" class="post-date">@blog.obj.Created</p>
                                    <strong>@blog.obj.Title</strong>
                                    <h2 class="text-left">@blog.obj.Author</h2>
                                    <h4 class="text-left">@blog.obj.Category</h4>
                                    <p aria-hidden="true"><a href="@blog.obj.CategorySlug" class="animate btn-bordered"><span>Read More</span></a></p>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
                }
                //Increment Carousal Dynamic ID
                ProductSno += 1;
            }
        }
    }
    
</div>
