@{
/*
    Name: Page Internal Error 500
    Purpose: Show This Error Page when found error 500
    Structure: /Views/Common/Error500.cshtml
    Contains (Partial Views Used):
        a-/Views/Shared/_Layout.cshtml    (For base Structure)

    Contained In (Where we Use this View):
    */
}
@{
    ViewBag.Title = "Error";
    Layout = "~/Views/Shared/_LayoutError.cshtml";
}
<div class="container">
    <div class="row">
        <div class="error-bg text-center">
            <img src="~/assets/theme/ocx/images/500.png" />
            <h3 class="error-h6">Internal Server Error</h3>
            <p class="error-desc">Ooops! It seems like something went wrong inside the system. We're on it !</p>
            <p aria-hidden="true"><a class="animate btn-bordered" href="~/" role="button">Go Back to Home Page</a></p>
        </div>
    </div>
</div>